{
    "name": "ts-monorepo",
    "version": "0.9.0",
    "description": "Monorepo template for typescript project",
    "type": "module",
    "private": true,
    "keywords": [
        "monorepo",
        "typescript",
        "eslint",
        "prettier",
        "jest",
